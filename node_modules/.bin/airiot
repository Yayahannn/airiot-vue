#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="$basedir/../.store/@airiot+devtool@1.0.7/node_modules/@airiot"
else
  export NODE_PATH="$NODE_PATH:$basedir/../.store/@airiot+devtool@1.0.7/node_modules/@airiot"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../.store/@airiot+devtool@1.0.7/node_modules/@airiot/devtool/bin/iot-scripts.js" "$@"
else
  exec node  "$basedir/../.store/@airiot+devtool@1.0.7/node_modules/@airiot/devtool/bin/iot-scripts.js" "$@"
fi
